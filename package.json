{
  "name": "amineportfolio",
  "version": "1.0.0",
  "description": "my portfolio",
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "onerror \"node-sass  -o dist/css src/scss\"",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "lint": "eslint src/js || true",
    "babel": "babel src/js/main.js -o src/js/main-compiled.js",
    "bundel": "webpack --mode development ./src/js/index.js --output ./dist/js/main.js ",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint bundel",
    "build": "run-s build:*",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "start": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "autoprefixer": "^9.0.1",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.12.8",
    "cli-error-notifier": "^2.0.1",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amineProjects/aminePortfolio.git"
  },
  "keywords": [
    "amine",
    "portfolio"
  ],
  "author": "amine",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amineProjects/aminePortfolio/issues"
  },
  "homepage": "https://github.com/amineProjects/aminePortfolio#readme"
}
